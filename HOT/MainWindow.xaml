<Window x:Class="OculusHack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OculusHack"
        mc:Ignorable="d"
        Title="HOT - Humble Oculus Toolkit - Daws 2018" Height="400" Width="590" ResizeMode="CanMinimize" TabIndex="0" >


    <Grid x:Name="grid" Margin="10,10,10,10">

        <TabControl Margin="0,20,0,0">
            <TabItem Header="Main">
                <Grid x:Name="MainGrid" Margin="0" UseLayoutRounding="False" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <Label Content="Global Super Sampling" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalContentAlignment="Center" Width="180" HorizontalContentAlignment="Right"/>
                    <Label x:Name="l_ss"       Grid.Row="0" Grid.Column="1" Content="1.0" HorizontalAlignment="Left" Width="80" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Margin="50,0,0,0" Padding="0" />
                    <Button x:Name="b_ss_plus"  Grid.Row="0" Grid.Column="1" Content="+" HorizontalAlignment="Left" Width="50" Click="b_ss_plus_Click" FontSize="24" VerticalContentAlignment="Top" Margin="130,0,0,0"/>
                    <Button x:Name="b_ss_minus" Grid.Row="0" Grid.Column="1" Content="-" HorizontalAlignment="Left" Width="50" Click="b_ss_minus_Click" FontSize="24" VerticalContentAlignment="Top" Margin="0"/>
                    <Button x:Name="b_setSS"   Grid.Row="0" Grid.Column="1" Content="Apply Super Sampling" Width="180" Click="b_setSS_Click" HorizontalAlignment="Right"/>


                    <Label Content="Async Space Warp status" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Width="180" />
                    <ComboBox x:Name="cb_ASW" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center" SelectionChanged="Cb_ASW_SelectionChanged" FontSize="14"  >
                        <ComboBoxItem Content="Auto"/>
                        <ComboBoxItem Content="45fps ASW on"/>
                        <ComboBoxItem Content="45fps ASW off"/>
                        <ComboBoxItem Content="Off"/>
                    </ComboBox>

                    <Label Content="OSD performance monitor" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left"  VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Width="180"/>
                    <ComboBox x:Name="cb_debugHUD" Grid.Row="2" Grid.Column="1" VerticalContentAlignment="Center" SelectionChanged="cb_debugHUD_SelectionChanged" FontSize="14"  >
                        <ComboBoxItem Content="Off"/>
                        <ComboBoxItem Content="Performance summary"/>
                        <ComboBoxItem Content="Latency timing"/>
                        <ComboBoxItem Content="Application render timing"/>
                        <ComboBoxItem Content="Compositor render timing"/>
                        <ComboBoxItem Content="ASW status"/>
                        <ComboBoxItem Content="Layer info - Pixel density"/>
                    </ComboBox>


                </Grid>
            </TabItem>
            
            
            <TabItem Header="Advanced"  >
                <Grid x:Name="grid_advanced">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="ck_home_status" Content="Oculus Home Enable" Grid.Column="0" VerticalContentAlignment="Center" Click="Ck_home_status_Click"/>
                    <CheckBox x:Name="ck_sfx_status" Content="Dash SFX Enable" Grid.Row="1" Grid.Column="0" VerticalContentAlignment="Center" Click="Ck_sfx_status_Click"/>

                    <Label  x:Name="l_timer"    Grid.Row="1" Grid.Column="1" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" FontSize="48"  Width="50"/>
                    <Button x:Name="b_back_lib" Grid.Row="2" Content="Backup Library"  Click="B_back_lib_Click" FontSize="10" />
                    <Button x:Name="b_lib"      Grid.Row="3" Content="Resore Library"  Click="B_restore_lib_Click" FontSize="10" />
                    <Button x:Name="b_guardian" Grid.Row="4" Content="Enable Guardian" Click="B_guardian_Click" FontSize="10" />
                    <Label  x:Name="l_version"  Grid.Row="5" Content="Runtime version" VerticalAlignment="Top"/>


                </Grid>
            </TabItem>
            
        </TabControl>



        <Label Content="Oculus install folder found in:" Padding="0" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="180" FontWeight="Bold" Height="20"/>
        <Label x:Name="l_oculusfolder" Content="OulusFolder" Padding="0" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="20" Width="329" BorderBrush="Red" Background="#00000000" Margin="182,0,0,0"/>
        <Button x:Name="b_oculusfolder" Content="..." Margin="511,0,0,0" Click="b_oculusfolder_Click" IsEnabled="False" HorizontalAlignment="Left" Width="38" Height="20" VerticalAlignment="Top"/>




    </Grid>
</Window>
